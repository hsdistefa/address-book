{
  "manifest_version": 2,

  "name": "Crypto Address Book",
  "description": "Keep track of your crypto-currency addresses in one convenient place",
  "version": "0.1",

  "browser_action": {
   "default_icon": {
   	  "19": "icons/icon19.png",
   	  "38": "icons/icon38.png"
   	},

   "default_popup": "popup.html"
  },

  "icons": {
  	"16": "icons/icon16.png",
  	"24": "icons/icon24.png",
	"32": "icons/icon32.png",  
  	"48": "icons/icon48.png",
  	"128": "icons/icon128.png",
  },

  "permissions": [
   "storage",
   "tabs"
   ]
}
