{
  "manifest_version": 2,

  "name": "Crypto Address Book",
  "description": "Keep track of your crypto-currency addresses in one convenient place",
  "version": "0.1",

  "browser_action": {
   "default_icon": {
   	  "24": "icons/icon24.png",
   	  "32": "icons/icon32.png"   	  
   	},

   "default_popup": "popup.html"
  },

  "icons": {
  	"16": "icons/icon16.png",
  	"19": "icons/icon19.png",
  	"48": "icons/icon48.png",
  	"128": "icons/icon128.png"
  },

  "permissions": [
   "storage"
   ]
}
